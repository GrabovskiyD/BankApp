<UserControl x:Class="BankApp.View.UserControls.DisplayClient"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BankApp.View.UserControls"
             xmlns:viewmodel="clr-namespace:BankApp.ViewModel" d:DataContext="{d:DesignInstance Type=viewmodel:MainWindowVM}"
             mc:Ignorable="d" 
             d:DesignHeight="60" d:DesignWidth="300"
             Background="Transparent"
             Style="{StaticResource ListViewItemTheme}">
    <TextBox IsReadOnly="True"
             Style="{StaticResource TextBoxesTheme}"
             Text="{Binding FullName, Mode=OneWay}"
             Background="{DynamicResource BackgroundControlBrush}"
             VerticalAlignment="Center"/>
</UserControl>
