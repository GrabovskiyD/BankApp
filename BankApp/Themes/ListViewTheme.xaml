<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:usercontrols="clr-namespace:BankApp.View.UserControls">
    <Style x:Key="ListViewTheme" TargetType="ListView">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate>
                    <Border CornerRadius="10"
                            Background="{StaticResource BackgroundControlBrush}">
                        <ListView Background="{StaticResource BackgroundControlBrush}"
                                  Margin="10"
                                  BorderBrush="{StaticResource BackgroundControlBrush}">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <usercontrols:DisplayClient Client="{Binding}"/>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>