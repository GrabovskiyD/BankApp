                <ResourceDictionary Source="Themes/PasswordBoxTheme.xaml"/>
                <ResourceDictionary Source="Themes/ListViewTheme.xaml"/>
                <ResourceDictionary Source="Themes/TextBoxesTheme.xaml"/>
